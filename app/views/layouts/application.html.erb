            <li><%= link_to "Stores", stores_path %></li>
            <li><%= link_to "Articles", articles_path %></li>
          </ul>

        </div>
      </nav>
    </header>

    <main>
      <div class="container">
        <%= yield %>
      </div>
    </main>

    <footer class="blue">
      <div class="footer-copyright">
        <div class="container">
          <p class="white-text">Â© 2016 Copyright</p>
